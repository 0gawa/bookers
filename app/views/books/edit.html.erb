<main>
  <h1 class = "edit_title">Editing Book</h1>
  
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  
  <%= form_with model:@book do |f| %>
    <p class = "edit_title_text">Title</p>
    <%= f.text_field :title %>
    <p class = "edit_title_text">Body</p>
    <div class = "edit_space"><%= f.text_area :body %></div>
    <div class = "update_bottom"><%= f.submit 'Update Book' %></div>
  <% end %>
  
  <div class = "edit_bottom">
    <span><%= link_to "Show", book_path(@book.id) %></span><span class = "show_1">|</span>
    <span><%= link_to "Back", '/books' %></span>
  </div>
</main>


